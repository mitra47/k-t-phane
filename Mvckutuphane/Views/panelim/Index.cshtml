@model Mvckutuphane.Models.Entity.TBLUYE
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Profil Bilgileri</h2>

@using (Html.BeginForm("Index", "panelim", FormMethod.Post))
{



<table class="table table-light" style="margin-top:30px">
    <tr>
        <td>
            <label style="font-weight:bolder" class="form-control-plaintext" > Mail Adresi</label>
            @HttpContext.Current.User.Identity.Name
        </td>
    </tr>


    <tr>
        <td>
            @Html.LabelFor(x => x.AD)
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.SOYAD)
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.KULLANICIADI)
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.SIFRE)
            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.OKUL)
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-warning">Bilgileri Güncelle</button>
        </td>
    </tr>
</table>
}
