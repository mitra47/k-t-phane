@model Mvckutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">

    <div style="margin-top:15px">
        <label>Uye ID</label>
       @*@Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })*@
       @Html.DropDownListFor(k => k.TBLUYE.ID, (List<SelectListItem>)ViewBag.dgr1, new {@class="form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @*@Html.TextBoxFor(k => k.KİTAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TBLKITAP.ID,(List<SelectListItem>)ViewBag.dgr2,new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Personel ID</label>
        @*@Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TBLPERSONEL.ID,(List<SelectListItem>)ViewBag.dgr3,new {@class="form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
      <input type="text" class="form-control" name="ALISTARIHI" value="@DateTime.Now.ToShortDateString()"/>
    </div>

    <div style="margin-top:15px">
        <label>Kitap İade Tarihi </label>
       <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(10).ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:deepskyblue"> Kitap Ödünç Ver</button>
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>

</form>