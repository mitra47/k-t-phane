@model Mvckutuphane.Models.Entity.TBLHAREKET

@{
    ViewBag.Title = "Odunciade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("OduncGuncelle", "Odunc", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>Kitap ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />

        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.TBLKITAP.ADI, new { @class = "form-control" })
        <br />

        <label>Üye</label>
        @Html.TextBoxFor(k => k.TBLUYE.AD, new { @class = "form-control" })
        <br />

        <label>Personel</label>
        @Html.TextBoxFor(k => k.TBLPERSONEL.PERSONEL, new { @class = "form-control" })
        <br />

        <label>Alış Tarihi</label>
        @Html.TextBoxFor(k => k.ALISTARIHI, "{0:dd.MM.yyyy}", new { @class = "form-control" })
        <br />

        <label>Normal İade Tarihi</label>
        @Html.TextBoxFor(k => k.IADETARIH, "{0:dd.MM.yyyy}", new { @class = "form-control" })
        <br />

        <label> Üyenin Getirdiği Tarihi</label>
        <input type="text" class="form-control" name="UYEGETIRTARIH" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Geç Getirilen Gün Sayısı</label>
        <input type="text" class="form-control" id="Gecinput" value="@ViewBag.dgr" />
        
    </div>
    <div>
        <button class="btn btn-danger" style="background-color:forestgreen">Kitapı İade Et</button>
    </div>

}