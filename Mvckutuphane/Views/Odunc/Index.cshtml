@using Mvckutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

<table class=" table table-striped">
    <tr style="background-color:#f8d114">
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İdae Tarihi</th>
        <th>İdae Al</th>

    </tr>


    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.TBLKITAP.ADI   </td>
            <td>@k.TBLUYE.AD&nbsp; @k.TBLUYE.SOYAD</td>
            <td>@k.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARIHI).ToString("dd/MMM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MMM/yyyy")</td>


            <td><a href="/Odunc/OduncIade/ @k.ID" class="btn btn-danger" style="background-color:brown">Kitabı İade Et</a></td>

        </tr>
    }

</table>


