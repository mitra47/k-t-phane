@using Mvckutuphane.Models.Entity;
@model List<TBLHAREKET>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye:@ViewBag.u1</h2>


<br />
<br />
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Yazar Detay</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2></h2>
        <p></p>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Kitap Adı</th>
                    <th>Personel</th>
                    <th>Alış Tarihi</th>
                    <th>İade Tarihi</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var x in Model)
                {
                <tr>
                    <td>@x.TBLKITAP.ADI</td>
                    <td>@x.TBLPERSONEL.PERSONEL</td>
                    <td>@Convert.ToDateTime(x.ALISTARIHI).ToString("dd/MM/yyyy")</td>
                    <td>@Convert.ToDateTime(x.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
                </tr>
                }


            </tbody>
        </table>
    </div>

</body>
</html>
