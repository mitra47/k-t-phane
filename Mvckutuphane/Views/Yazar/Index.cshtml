@using Mvckutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <tr style="background-color:#f8d114">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYADI</td>


            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new
            {
                @class = "btn btn-danger",

           onclick = "return confirm ('Silmek İstiyor Musunuz?')"
            })
            </td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">GÜNCELLE</a></td>

            <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-success" style="background-color:dimgray">Yazarın Kitapları</a></td>
        </tr>


    }

</table>

<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>

