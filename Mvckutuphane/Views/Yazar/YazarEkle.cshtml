@model Mvckutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>ID</label>
        @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>YAZAR ADI</label>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.AD)
    </div>
    <div style="margin-top:15px">
        <label>YAZAR SOYADI</label>
        @Html.TextBoxFor(y => y.SOYADI, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.SOYADI)
    </div>
    <div style="margin-top:15px">
        <label>Yazar Detay Bilgileri</label>
        @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Yazar Ekle</button>
    </div>
</form>

